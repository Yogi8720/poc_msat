@model poc_msat.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(a => a.Customer.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(a => a.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(a => a.Customer.Mobile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(a => a.Customer.Mobile)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(a => a.OrderItems)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.OrderItems.Count>0){
                var Ors = Model.OrderItems.Select(x => x.Name);
                string StrOrs = string.Join(",", Ors);
                <span>@StrOrs</span>
            }else{
            <span></span>
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    <a asp-action="Index">Back to List</a>
</div>
