@model poc_msat.Models.OrderViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Order.Customer.Name" class="control-label"></label>
                <input asp-for="Order.Customer.Name" class="form-control" />
                <span asp-validation-for="Order.Customer.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.Customer.Mobile" class="control-label"></label>
                <input asp-for="Order.Customer.Mobile" class="form-control" />
                <span asp-validation-for="Order.Customer.Mobile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.OrderItems" class="control-label"></label>
                <br />
                @Html.ListBoxFor(x=> x.SelectedItems, Model.SelectListItems, new { style="width:200px;height:150px;margin-bottom:5px;" })
                <span asp-validation-for="Order.OrderItems" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
